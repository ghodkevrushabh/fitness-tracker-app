<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    This is the base application theme.
    It's what the Manifest and postSplashScreenTheme are looking for.
    It inherits from a standard NoActionBar theme.
    -->
    <style name="Theme.FitTrack" parent="android:Theme.Material.Light.NoActionBar" />

    <!--
    This is the Splash Screen theme we created.
    It correctly points to Theme.FitTrack as the post-splash theme.
    -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Use our logo as the splash screen icon -->
        <!-- Note: If your logo is a .png, use "@drawable/ic_splash_logo" -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>

        <!-- Set the theme that will be used *after* the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.FitTrack</item>
    </style>
</resources>